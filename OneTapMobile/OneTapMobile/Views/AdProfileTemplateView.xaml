                                </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>
                      <IndicatorView Grid.Row="1"  x:Name="indicatorView"  IndicatorColor="WhiteSmoke" SelectedIndicatorColor="#AC47ED" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Padding="0" Margin="0" ItemsSource="{Binding AdProfileList}" />
