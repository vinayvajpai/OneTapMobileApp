                <StackLayout Grid.Row="4" Spacing="10" VerticalOptions="Start">
                    <Label  Text="Onetap will automatically recommend text for your ads based on your selection. You can change to your liking."  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center" Opacity="1.0" TextColor="Black" FontSize="12" FontFamily="{StaticResource SemiBoldFont}"/>
                </StackLayout>
                <Frame Grid.Row="5" Style="{StaticResource FrameStyle}" BackgroundColor="#AC47ED" x:Name="Frame1" Opacity="1.0" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
