    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="{Binding SafeAreaSpacing}">
                <Grid Grid.Row="0" Margin="5,0" ColumnDefinitions="1*,8*,1*" RowDefinitions="30">
                    <ImageButton Grid.Column="0" Grid.Row="0" Source="BackArrow" BackgroundColor="Transparent" VerticalOptions="CenterAndExpand" HorizontalOptions="Start" HeightRequest="30" WidthRequest="30" Command="{Binding BackCommand}"/>
                    <Label Grid.Column="1" IsVisible="false" Grid.Row="0" Text="Help Guide" FontSize="20" FontAttributes="Bold" TextColor="Black" BackgroundColor="Transparent" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                </Grid>
            </StackLayout>
            <Grid  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <WebView x:Name="WebPageView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0" Navigated="OnNavigated" Navigating="OnNavigating" xct:CornerRadiusEffect.CornerRadius="10"/>
                <ActivityIndicator x:Name="activity_indicator" IsVisible="true" IsRunning="true" Color="#AC47ED" BindingContext="{x:Reference WebPageView}" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Grid>
